import java.util.Scanner;
public class ex1 {
public static void main(String[] args) {
	Scanner in= new Scanner (System.in);
	double b,h,area,perimetro;
	 System.out.println("digite valor da base");
	 b=in.nextDouble();
	 System.out.println("digite valor da altura");
	 h=in.nextDouble();
	 area=b*h;
	 perimetro=b+b+h+h;
	 System.out.println("area do retangulo:"+area+ "\n");
	 System.out.println("Perimetro do retangulo:"+perimetro+ "\n");
	 in.close();
	

}
}
