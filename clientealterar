	private JLabel loadImage(String fileName) {
        try {
            BufferedImage image = ImageIO.read(new File(fileName));
            return new JLabel(new ImageIcon(image));
        } catch (Exception e) {
            System.out.println("Erro ao carregar a imagem: " + e.getMessage());
            return null;
        }
    }
